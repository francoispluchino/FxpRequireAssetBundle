<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Assetic Require Tag Renderer -->
        <service id="fxp_require_asset.tag_renderer.require_asset.assetic" class="Fxp\Bundle\RequireAssetBundle\Assetic\Tag\Renderer\AsseticRequireTagRenderer" public="false">
            <tag name="fxp_require_asset.tag_renderer" priority="-250" />
            <argument type="service" id="assetic.asset_manager" />
            <argument type="service" id="assets.packages" />
            <argument type="service" id="fxp_require_asset.config.locale_manager" />
            <argument>%fxp_require_asset.assetic.config.debug_common_assets%</argument>
        </service>
    </services>
</container>
