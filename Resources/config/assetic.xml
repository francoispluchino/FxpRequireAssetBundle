<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fxp_require_asset.assetic.filter.requirecssrewrite.class">Fxp\Bundle\RequireAssetBundle\Assetic\Filter\RequireCssRewriteFilter</parameter>
    </parameters>

    <services>
        <!-- Assetic Config File Extension Manager (only used during the container compilation) -->
        <service id="fxp_require_asset.assetic.config.file_extension_manager" class="Fxp\Bundle\RequireAssetBundle\Assetic\Config\FileExtensionManager" public="false" />

        <!-- Assetic Config Pattern Manager (only used during the container compilation) -->
        <service id="fxp_require_asset.assetic.config.pattern_manager" class="Fxp\Bundle\RequireAssetBundle\Assetic\Config\PatternManager" public="false" />

        <!-- Assetic Config Output Manager (only used during the container compilation) -->
        <service id="fxp_require_asset.assetic.config.output_manager" class="Fxp\Bundle\RequireAssetBundle\Assetic\Config\OutputManager" public="false">
            <argument type="string">%fxp_require_asset.output_prefix%</argument>
        </service>

        <!-- Assetic Config Package Manager (only used during the container compilation) -->
        <service id="fxp_require_asset.assetic.config.package_manager" class="Fxp\Bundle\RequireAssetBundle\Assetic\Config\PackageManager" public="false">
            <argument type="service" id="fxp_require_asset.assetic.config.file_extension_manager" />
            <argument type="service" id="fxp_require_asset.assetic.config.pattern_manager" />
        </service>

        <!-- Assetic Require Asset Loader -->
        <service id="fxp_require_asset.assetic.require_asset_loader" class="Fxp\Bundle\RequireAssetBundle\Assetic\Factory\Loader\RequireAssetLoader" public="false">
            <tag name="assetic.formula_loader" alias="fxp_require_asset_loader" />
        </service>

        <service id="fxp_require_asset.assetic.filter.requirecssrewrite" class="%fxp_require_asset.assetic.filter.requirecssrewrite.class%">
            <tag name="assetic.filter" alias="requirecssrewrite" />
            <argument type="service" id="assetic.asset_manager" />
        </service>
    </services>
</container>
