<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fxp_require_asset.exception.twig_asset.class">Fxp\Bundle\RequireAssetBundle\Listener\TwigAssetSubscriber</parameter>
    </parameters>

    <services>
        <service id="fxp_require_asset.exception.twig_asset" class="%fxp_require_asset.exception.twig_asset.class%">
            <tag name="kernel.event_subscriber" />
            <argument type="expression">service('twig').getExtension('fxp_require_asset')</argument>
        </service>
    </services>
</container>
